{
  "name": "Chrome BO AutoLogin",
  "version": "1.0.5",
  "author": "Bart≈Çomiej Lenart",
  "description": "Auto login to BO",
  "permissions": ["storage", "webNavigation", "runtime"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
    ],
  "manifest_version": 2
}